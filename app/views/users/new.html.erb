<h1>Sign Up</h1>

<div class="row">
	<%= form_for(@user, url: @signup_path) do |f| %>
		<%= render "shared/error_messages" %>

		<%= f.label :name %> <br>
		<%= f.text_field :name %> <br>

		<%= f.label :email %> <br>
		<%= f.email_field :email %> <br>

		<%= f.label :password %> <br>
		<%= f.password_field :password %> <br>

		<%= f.label :password_confirmation %> <br>
		<%= f.password_field :password %> <br>

		<br>

		<%= f.submit "Create my Account" %>

	<% end -%>
</div>